<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMvvm.Mvvm.View.StartPage"
             Title="StartPage">


    <Border Margin="10" VerticalOptions="FillAndExpand" Stroke="{StaticResource amethyst}" BackgroundColor="{StaticResource darkpurple}" StrokeShape="RoundRectangle 20,20,20,20">
        <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,*">
            <Label Text="Maiu MVVM" FontSize="Large" VerticalOptions="Center" TextColor="{StaticResource linen}" Grid.ColumnSpan="2" HorizontalTextAlignment="Center"/>

            <Label Text="Vezetéknév:" FontSize="Body" VerticalOptions="Center" HorizontalOptions="Center" Grid.Row="1" TextColor="{StaticResource linen}" />
            <Entry Grid.Row="1" Grid.Column="1" Text="{Binding Nev.Vezeteknev}" TextColor="{StaticResource linen}" HeightRequest="30"/>

            <Label Text="Keresztnév:" FontSize="Body" VerticalOptions="Center" HorizontalOptions="Center" Grid.Row="2" TextColor="{StaticResource linen}" />
            <Entry Grid.Row="2" Grid.Column="1" Text="{Binding Nev.Keresztnev}" TextColor="{StaticResource linen}" HeightRequest="30" />
            <Button x:Name="buttonTovabb" Text="Tovább" Grid.Row="3" Grid.ColumnSpan="2" 
                    Margin="10,0,10,0" Clicked="buttonTovabb_Clicked" HeightRequest="30"/>


        </Grid>
    </Border>
    
</ContentPage>