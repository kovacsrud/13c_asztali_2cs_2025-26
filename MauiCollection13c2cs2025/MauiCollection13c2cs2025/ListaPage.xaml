<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCollection13c2cs2025.ListaPage"           
             Title="ListaPage">

    <Border Margin="10" VerticalOptions="Fill" Stroke="{StaticResource Vilagoszold}" BackgroundColor="{StaticResource Kozepzold}" StrokeShape="RoundRectangle 20,20,20,20">
        <Grid RowDefinitions=".1*,.2*,.5*,.2*">
            <Label Text="Lista nézet" FontSize="Header" FontFamily="Mistral" HorizontalOptions="Center"/>
            <CollectionView Grid.Row="2" HorizontalOptions="Center" ItemsSource="{Binding .}" SelectionMode="Single" EmptyView="A lista üres!">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="{StaticResource Voros}" BackgroundColor="{StaticResource Krem}" StrokeShape="RoundRectangle 10,10,10,10">
                            
                            <Grid ColumnDefinitions="*,*,*">
                                <Label Text="{Binding HegyCsucsNeve}" />
                                <Label Text="{Binding Hegyseg}" Grid.Column="1" />
                                <Label Text="{Binding Magassag}" Grid.Column="2" />
                            </Grid>
                            
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </Grid>
    </Border>
    
</ContentPage>