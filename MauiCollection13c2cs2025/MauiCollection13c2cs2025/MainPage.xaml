<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCollection13c2cs2025.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Lista nézet" FontSize="Header" FontFamily="Mistral" HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding .}" SelectionMode="Single" HorizontalOptions="Center" EmptyView="A lista üres!" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,*">
                            <Label Text="{Binding HegyCsucsNeve}" />
                            <Label Text="{Binding Hegyseg}" Grid.Column="1" />
                            <Label Text="{Binding Magassag}" Grid.Column="2" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
