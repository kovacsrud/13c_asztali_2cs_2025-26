<Window x:Class="WpfKutyakEF.mvvm.view.InputKutyaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKutyakEF.mvvm.view"
        mc:Ignorable="d"
        Title="Új adat felvitele" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding AktKutya.Eletkor}"  Width="300" Height="40" FontSize="30"/>
        <TextBox Text="{Binding AktKutya.Utolsoell}" Width="300" Height="40" FontSize="30" Grid.Row="1"/>
        <ComboBox x:Name="comboKutyanev" ItemsSource="{Binding VM.Kutyanevek}" DisplayMemberPath="Kutyanev" SelectedValuePath="Id" SelectedItem="{Binding AktKutya.Nev}" SelectedValue="{Binding AktKutya.Nevid}" Grid.Row="2" Width="300" Height="40"/>
        <ComboBox x:Name="comboKutyafajta" ItemsSource="{Binding VM.Kutyafajtak}" DisplayMemberPath="Nev" SelectedValuePath="Id" SelectedItem="{Binding AktKutya.Fajta}"  SelectedValue="{Binding AktKutya.Fajtaid}"  Grid.Row="3" Width="300" Height="40"/>
        <Button x:Name="buttonMentes" Content="Mentés" Width="200" Height="40" Grid.Row="4" Click="buttonMentes_Click"/>


    </Grid>
</Window>
