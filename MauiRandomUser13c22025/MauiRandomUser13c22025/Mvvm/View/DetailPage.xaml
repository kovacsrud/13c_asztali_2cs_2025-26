<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiRandomUser13c22025.Mvvm.View.DetailPage"
             Title="DetailPage" NavigationPage.HasNavigationBar="False" BackgroundColor="{StaticResource RuHatter}">

    <ScrollView>
        <Border VerticalOptions="Fill" Margin="10" Stroke="{StaticResource RuStroke}" BackgroundColor="{StaticResource RuHatter}" StrokeShape="RoundRectangle 0,40,40,0">

            <Grid RowDefinitions=".4*,.1*,.1*,.1*,.1*,.1*,.1*">
                <Border StrokeShape="RoundRectangle 20,20,20,20" WidthRequest="200" HeightRequest="200">
                    <Image Source="{Binding picture.large}" WidthRequest="200" HeightRequest="200" />
                </Border>
                <HorizontalStackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="{Binding name.title}" FontSize="18" FontFamily="Nexaheavy" TextColor="White" Margin="5,0,2,0" />
                    <Label Text="{Binding name.first}" FontSize="18" FontFamily="Nexaheavy" TextColor="White" Margin="0,0,2,0" />
                    <Label Text="{Binding name.last}" FontSize="18" FontFamily="Nexaheavy" TextColor="White" Margin="0,0,2,0" />
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Grid.Row="2" VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="Email:" FontSize="18" FontFamily="Nexaheavy" TextColor="White" Margin="5,0,5,0" />
                    <Label Text="{Binding email}" FontSize="18" FontFamily="Nexaheavy" TextColor="White" Margin="0,0,5,0" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Row="3" VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="Phone:" FontSize="18" FontFamily="Nexaheavy" TextColor="White" Margin="5,0,5,0" />
                    <Label Text="{Binding phone}" FontSize="18" FontFamily="Nexaheavy" TextColor="White" Margin="0,0,5,0" />
                </HorizontalStackLayout>

            </Grid>


        </Border>
    </ScrollView>


</ContentPage>