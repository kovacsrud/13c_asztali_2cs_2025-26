<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiJegyzet13c22025V2.Mvvm.View.JegyzetInput"
             Title="JegyzetInput">
    <VerticalStackLayout>
        <Label 
            Text="Új jegyzet"
            x:Name="labelCim"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="entryCim" Text="{Binding AktualisJegyzet.Cim}" />
        <Entry x:Name="entrySzoveg" Text="{Binding AktualisJegyzet.Szoveg}" />
        <DatePicker Date="{Binding AktualisJegyzet.Datum}" />

        <Button x:Name="buttonInput" Text="Rögzítés" WidthRequest="200" Clicked="buttonInput_Clicked" />
    </VerticalStackLayout>
</ContentPage>