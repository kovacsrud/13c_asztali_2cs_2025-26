<Window x:Class="WpfKutyakDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKutyakDB"
        mc:Ignorable="d"
        Title="Rendelő" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Menu FontSize="18">
            <MenuItem Header="Fájl" />
            <MenuItem Header="Szerkesztés" />
            <MenuItem Header="Adatok">
                <MenuItem x:Name="menuitemKutyanev" Header="Kutyanevek" Click="menuitemKutyanev_Click"/>
                <MenuItem x:Name="menuitemRendeles" Header="Rendelések adatai" Click="menuitemRendeles_Click"/>
            </MenuItem>
            <MenuItem Header="Súgó" />

        </Menu>

    </Grid>
</Window>
