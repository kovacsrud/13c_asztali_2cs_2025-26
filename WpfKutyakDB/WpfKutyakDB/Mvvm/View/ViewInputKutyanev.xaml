<Window x:Class="WpfKutyakDB.Mvvm.View.ViewInputKutyanev"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKutyakDB.Mvvm.View"
        mc:Ignorable="d"
        Title="Új kutyanév" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Új kutyanév felvitele" x:Name="textblockCim" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="textboxKutyanev" Text="{Binding SelectedKutyanev.KutyaNev}" Width="300" FontSize="20" Height="30" Grid.Row="1"/>
        <Button x:Name="buttonMentes" Content="Mentés" Grid.Row="2"  Width="300" Height="30" Click="buttonMentes_Click"/>

    </Grid>
</Window>
