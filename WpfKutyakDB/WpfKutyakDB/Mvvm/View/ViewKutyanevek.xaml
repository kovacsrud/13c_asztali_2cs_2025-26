<Window x:Class="WpfKutyakDB.Mvvm.View.ViewKutyanevek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKutyakDB.Mvvm.View"
        mc:Ignorable="d"
        Title="Kutyanevek" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Kutyanevek}" SelectedItem="{Binding SelectedKutyanev}" Grid.ColumnSpan="2" ColumnWidth="*" IsReadOnly="True" MouseDoubleClick="DataGrid_MouseDoubleClick"/>
        <Button x:Name="buttonUjKutyanev" Content="Új kutyanév" Width="200" Grid.Row="1" Height="30" Click="buttonUjKutyanev_Click"/>
        <Button x:Name="buttonTorolKutyanev" Content="Törlés" Width="200" Grid.Row="1" Grid.Column="1" Height="30" Click="buttonTorolKutyanev_Click"/>


    </Grid>
</Window>
