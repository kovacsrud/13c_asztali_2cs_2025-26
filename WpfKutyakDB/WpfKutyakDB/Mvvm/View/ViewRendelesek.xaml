<Window x:Class="WpfKutyakDB.Mvvm.View.ViewRendelesek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKutyakDB.Mvvm.View"
        mc:Ignorable="d"
        Title="Rendelések" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Rendelesek}" SelectedItem="{Binding SelectedRendeles}" ColumnWidth="*" IsReadOnly="True" Grid.ColumnSpan="2" AutoGenerateColumns="False" MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Kutya neve" Binding="{Binding KutyaNev}" />
                <DataGridTextColumn Header="Kutya fajtája" Binding="{Binding FajtaNev}" />
                <DataGridTextColumn Header="Kutya életkora" Binding="{Binding Eletkor}" />
                <DataGridTextColumn Header="Utolsó ellenőrzés" Binding="{Binding UtolsoEll}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="buttonUjRendeles" Content="Új rendelési adat" Grid.Row="1" Width="200" Height="30" Click="buttonUjRendeles_Click"/>
        <Button x:Name="buttonTorles" Content="Törlés" Grid.Row="1" Grid.Column="2" Width="200" Height="30" Click="buttonTorles_Click"/>

    </Grid>
</Window>
