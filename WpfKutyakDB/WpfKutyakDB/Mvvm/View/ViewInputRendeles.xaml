<Window x:Class="WpfKutyakDB.Mvvm.View.ViewInputRendeles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKutyakDB.Mvvm.View"
        mc:Ignorable="d"
        Title="Új rendelési adat" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textblockCim" Text="Új rendelési adat" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="textboxEletkor" Text="{Binding SelectedRendeles.Eletkor}" FontSize="30" Grid.Row="1" Width="300" Height="40"/>
        <TextBox x:Name="textboxUtolsoEll" Text="{Binding SelectedRendeles.UtolsoEll}" FontSize="30" Grid.Row="2" Width="300" Height="40"/>
        <ComboBox x:Name="comboKutyanevek" ItemsSource="{Binding Kutyanevek}" DisplayMemberPath="KutyaNev" SelectedValuePath="Id" Width="300" FontSize="24" Grid.Row="3" Height="40"/>
        <ComboBox x:Name="comboKutyafajtak" ItemsSource="{Binding Kutyafajtak}" DisplayMemberPath="FajtaNev" SelectedValuePath="Id" Width="300" FontSize="24" Grid.Row="4" Height="40"/>
        <Button x:Name="buttonMentes" Content="Mentés" Grid.Row="5" Width="200" Height="30" Click="buttonMentes_Click"/>

    </Grid>
</Window>
